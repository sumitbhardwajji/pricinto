properties([
    parameters([
       gitParameter(branch: '', branchFilter: '.*/integration|.*production-patch.*', defaultValue: 'integration', description: 'branch to deploy', name: 'branch', quickFilterEnabled: true, selectedValue: 'DEFAULT', sortMode: 'DESCENDING_SMART', tagFilter: '*', type: 'PT_BRANCH')
    ])
])

node(){
   stage('clean workspace'){
      cleanWs()
   }
   stage('Initialize'){
      checkout([$class: 'GitSCM', branches: [[name: "$branch"]], extensions: [], userRemoteConfigs: [[credentialsId: 'git_cred', url: 'https://github.com/sumitbhardwajji/pricinto.git']]])
      if($branch == 'integration'){
         print("sumit")
      }
      else{
        print("bhardwaj")
      }
   }
}
